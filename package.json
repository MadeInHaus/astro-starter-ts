{
  "name": "astro-starter-ts",
  "description": "A skeleton Astro app to quickly get started.",
  "version": "0.1.0",
  "author": "HAUS",
  "private": true,
  "engines": {
    "node": "^22"
  },
  "type": "module",
  "scripts": {
    "preinstall": "node scripts/check-node-version.mjs",
    "dev": "astro telemetry disable && astro dev",
    "build": "astro check && astro build",
    "build:dev": "astro check && rm -rf dist && astro build",
    "preview": "astro preview --host",
    "start": "node ./dist/server/entry.mjs",
    "astro": "astro",
    "clean": "node scripts/clean.mjs",
    "scaffold": "node scripts/scaffold.mjs",
    "prettier": "prettier -c .",
    "prettier-fix": "prettier -w .",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint-fix": "stylelint --fix \"**/*.css\"",
    "lint": "eslint . && npm run stylelint && npm run prettier",
    "generate-types": "graphql-codegen --config codegen.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.2.2",
    "@astrojs/sitemap": "^3.4.1",
    "@madeinhaus/utils": "^2.2.0",
    "astro": "^5.10.1",
    "astro-vtbot": "^2.1.5",
    "graffle": "^8.0.0-next.157",
    "graphql": "^16.11.0",
    "nanostores": "^1.0.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typed-document-node": "^5.1.2",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@madeinhaus/prettier-config": "^1.2.1",
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "figlet": "^1.8.1",
    "inquirer": "^12.6.3",
    "postcss-preset-env": "^10.2.3",
    "prettier": "^3.6.1",
    "prettier-plugin-astro": "^0.14.1",
    "shelljs": "^0.10.0",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-css-modules": "^1.2.2",
    "vitest": "^3.2.4"
  }
}
